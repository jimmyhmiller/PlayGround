// ---------------------------------------------------------------------------
// AST node types for the bootstrap parser
// ---------------------------------------------------------------------------

// Generic option type
enum Option<T> {
    Some { value: T },
    None {}
}

// Span
struct Span {
    start: I64,
    end: I64
}

// Module
struct Module {
    path: RawPointer<I8>,
    items: RawPointer<I8>
}

// Items
enum Item {
    FnItem { decl: FnDecl },
    StructItem { decl: StructDecl },
    EnumItem { decl: EnumDecl },
    ExternFnItem { decl: ExternFnDecl },
    UseItem { decl: UseDecl }
}

struct FnDecl {
    name: String,
    params: RawPointer<I8>,
    ret_type: Type,
    body: Block,
    span: Span
}

struct ExternFnDecl {
    name: String,
    params: RawPointer<I8>,
    varargs: Bool,
    ret_type: Type,
    span: Span
}

struct StructDecl {
    name: String,
    type_params: RawPointer<I8>,
    fields: RawPointer<I8>,
    span: Span
}

struct EnumDecl {
    name: String,
    type_params: RawPointer<I8>,
    variants: RawPointer<I8>,
    span: Span
}

struct EnumVariant {
    name: String,
    kind: EnumVariantKind,
    span: Span
}

enum EnumVariantKind {
    UnitKind {},
    TupleKind { types: RawPointer<I8> },
    StructKind { fields: RawPointer<I8> }
}

struct UseDecl {
    path: RawPointer<I8>,
    span: Span
}

// Fields & params
struct Field {
    name: String,
    ty: Type,
    span: Span
}

struct Param {
    name: String,
    ty: Type,
    span: Span
}

// Block
struct Block {
    stmts: RawPointer<I8>,
    tail: Option<Expr>,
    span: Span
}

// Statements
enum Stmt {
    ExprStmt { expr: Expr, span: Span },
    ReturnStmt { value: Option<Expr>, span: Span }
}

// Expressions
enum Expr {
    LetExpr { name: String, mutable: Bool, ty: Option<Type>, value: Expr, span: Span },
    IfExpr { cond: Expr, then_branch: Block, else_branch: Option<Block>, span: Span },
    WhileExpr { cond: Expr, body: Block, span: Span },
    MatchExpr { scrutinee: Expr, arms: RawPointer<I8>, span: Span },
    AssignExpr { target: Expr, value: Expr, span: Span },
    BinaryExpr { op: BinaryOp, left: Expr, right: Expr, span: Span },
    UnaryExpr { op: UnaryOp, operand: Expr, span: Span },
    CallExpr { callee: Expr, args: RawPointer<I8>, span: Span },
    FieldExpr { base: Expr, name: String, span: Span },
    PathExpr { path: RawPointer<I8>, span: Span },
    StructLitExpr { path: RawPointer<I8>, fields: RawPointer<I8>, span: Span },
    TupleExpr { items: RawPointer<I8>, span: Span },
    LitExpr { lit: Literal, span: Span },
    BlockExpr { block: Block },
    BreakExpr { span: Span },
    ContinueExpr { span: Span }
}

// Literal
enum Literal {
    IntLiteral { text: String },
    FloatLiteral { text: String },
    StrLiteral { text: String },
    BoolLiteral { value: Bool },
    CharLiteral { value: I64 },
    UnitLiteral {}
}

// Operators
enum BinaryOp {
    Add {},
    Sub {},
    Mul {},
    Div {},
    Rem {},
    Eq {},
    NotEq {},
    Lt {},
    LtEq {},
    Gt {},
    GtEq {},
    AndAnd {},
    OrOr {}
}

enum UnaryOp {
    Neg {},
    Not {}
}

// Types
enum Type {
    PathType { path: RawPointer<I8>, type_args: RawPointer<I8> },
    RawPtrType { inner: Type },
    TupleType { types: RawPointer<I8> }
}

// Patterns
enum Pattern {
    WildcardPat { span: Span },
    PathPat { path: RawPointer<I8>, span: Span },
    StructPat { path: RawPointer<I8>, fields: RawPointer<I8>, span: Span }
}

// Match arm
struct MatchArm {
    pattern: Pattern,
    body: Expr,
    span: Span
}

// Pattern field
struct PatternField {
    name: String,
    binding: Option<String>,
    span: Span
}

// Struct literal field
struct StructLitField {
    name: String,
    value: Expr
}

// Qualify pass helper types
struct ItemEntry {
    name: String,
    kind: I64
}

struct UseEntry {
    alias: String,
    path: RawPointer<I8>
}

// Resolve pass helper types
struct VariantMapEntry {
    enum_name: String,
    variant_name: String
}

// ---------------------------------------------------------------------------
// Typecheck pass types
// ---------------------------------------------------------------------------

// Internal type representation (18 variants)
enum Ty {
    TyI8 {},
    TyI16 {},
    TyI32 {},
    TyI64 {},
    TyU8 {},
    TyU16 {},
    TyU32 {},
    TyU64 {},
    TyF32 {},
    TyF64 {},
    TyBool {},
    TyUnit {},
    TyString {},
    TyRawPtr { inner: Ty },
    TyStruct { name: String, type_args: RawPointer<I8> },
    TyEnum { name: String, type_args: RawPointer<I8> },
    TyTuple { items: RawPointer<I8> },
    TyParam { name: String }
}

struct TypeField {
    name: String,
    ty: Ty
}

struct SubstEntry {
    name: String,
    ty: Ty
}

enum VariantDef {
    VUnit {},
    VTuple { types: RawPointer<I8> },
    VStruct { fields: RawPointer<I8> }
}

struct VariantDefEntry {
    name: String,
    def: VariantDef
}

struct StructMapEntry {
    name: String,
    type_params: RawPointer<I8>,
    fields: RawPointer<I8>
}

struct EnumMapEntry {
    name: String,
    type_params: RawPointer<I8>,
    variants: RawPointer<I8>
}

struct FnMapEntry {
    name: String,
    params: RawPointer<I8>,
    ret: Ty,
    varargs: Bool
}

struct LocalEntry {
    name: String,
    ty: Ty
}

// ---------------------------------------------------------------------------
// Codegen pass types
// ---------------------------------------------------------------------------

// All structs include name so we can store them directly in vecs and
// do linear-search lookups without needing separate "Named" wrapper types.

struct CgFieldLayout {
    name: String,
    type_name: String,
    offset: I64,
    is_ptr: Bool,
    llvm_ty: RawPointer<I8>,
    lang_ty_tag: I64
}

struct CgStructLayout {
    name: String,
    size: I64,
    fields: RawPointer<I8>,
    meta: RawPointer<I8>
}

struct CgVariantFieldLayout {
    name: String,
    type_name: String,
    is_ptr: Bool,
    ptr_index: I64,
    raw_offset: I64,
    llvm_ty: RawPointer<I8>,
    lang_ty_tag: I64
}

struct CgVariantLayout {
    name: String,
    tag: I64,
    fields: RawPointer<I8>
}

struct CgEnumLayout {
    name: String,
    size: I64,
    ptr_count: I64,
    raw_size: I64,
    raw_base: I64,
    meta: RawPointer<I8>,
    variants: RawPointer<I8>
}

struct CgLocal {
    name: String,
    type_name: String,
    ptr: RawPointer<I8>,
    ty: RawPointer<I8>,
    lang_ty_tag: I64,
    is_gc_ref: Bool
}

struct CgFnEntry {
    name: String,
    fn_val: RawPointer<I8>,
    fn_ty: RawPointer<I8>
}

struct LoopEntry {
    cond_bb: RawPointer<I8>,
    break_bb: RawPointer<I8>
}
