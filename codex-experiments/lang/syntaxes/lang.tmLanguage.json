{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lang",
	"scopeName": "source.lang",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#strings" },
		{ "include": "#characters" },
		{ "include": "#numbers" },
		{ "include": "#keywords" },
		{ "include": "#types" },
		{ "include": "#function-definition" },
		{ "include": "#struct-definition" },
		{ "include": "#enum-definition" },
		{ "include": "#function-call" },
		{ "include": "#constants" },
		{ "include": "#operators" },
		{ "include": "#punctuation" },
		{ "include": "#identifiers" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.lang",
					"match": "//.*$"
				},
				{
					"name": "comment.block.lang",
					"begin": "/\\*",
					"end": "\\*/",
					"patterns": [
						{
							"include": "#comments"
						}
					]
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.lang",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.lang",
							"match": "\\\\(x[0-9a-fA-F]{2}|[nrt\\\\'\"/0])"
						}
					]
				}
			]
		},
		"characters": {
			"patterns": [
				{
					"name": "string.quoted.single.lang",
					"match": "'(\\\\(x[0-9a-fA-F]{2}|[nrt\\\\'0])|[^'\\\\])'"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.float.lang",
					"match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*\\b"
				},
				{
					"name": "constant.numeric.integer.lang",
					"match": "\\b[0-9][0-9_]*\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.lang",
					"match": "\\b(if|else|while|match|return|break|continue)\\b"
				},
				{
					"name": "keyword.other.lang",
					"match": "\\b(fn|let|mut|struct|enum|extern|use|module)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.primitive.lang",
					"match": "\\b(I64|I32|I16|I8|U64|U32|U16|U8|F64|F32|Bool|String|Unit|Void)\\b"
				},
				{
					"name": "storage.type.lang",
					"match": "\\b(RawPointer)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.boolean.lang",
					"match": "\\b(true|false)\\b"
				}
			]
		},
		"function-definition": {
			"patterns": [
				{
					"match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"captures": {
						"1": { "name": "keyword.other.lang" },
						"2": { "name": "entity.name.function.lang" }
					}
				}
			]
		},
		"struct-definition": {
			"patterns": [
				{
					"match": "\\b(struct)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": { "name": "keyword.other.lang" },
						"2": { "name": "entity.name.type.lang" }
					}
				}
			]
		},
		"enum-definition": {
			"patterns": [
				{
					"match": "\\b(enum)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": { "name": "keyword.other.lang" },
						"2": { "name": "entity.name.type.lang" }
					}
				}
			]
		},
		"function-call": {
			"patterns": [
				{
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"captures": {
						"1": { "name": "variable.function.lang" }
					}
				}
			]
		},
		"operators": {
			"name": "keyword.operator.lang",
			"match": "->|=>|==|!=|<=|>=|&&|\\|\\||::|[+\\-*/%<>!=]|="
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.separator.lang",
					"match": "[,;]"
				},
				{
					"name": "punctuation.colon.lang",
					"match": ":"
				},
				{
					"name": "punctuation.dot.lang",
					"match": "\\."
				},
				{
					"name": "punctuation.bracket.lang",
					"match": "[{}()\\[\\]]"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.other.lang",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	}
}
