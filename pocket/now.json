{
  "version": 2,
  "name": "pocket",
  "alias": "pocket-app.now.sh",
  "builds": [
    { "src": "oauth.js", "use": "@now/node" },
    { "src": "landing.js", "use": "@now/node" }
  ],
  "env": {
    "FAUNA_SECRET": "@faunadb-secret",
    "POCKET_CONSUMER_KEY": "@pocket-consumer-key"
  },
  "routes": [
    {
      "src": "^/oauth",
      "dest": "oauth.js"
    },
    {
      "src": "^/landing",
      "dest": "landing.js"
    }
  ]
}