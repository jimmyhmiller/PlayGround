{
  "name": "ai-dashboard2",
  "version": "1.0.0",
  "description": "AI Dashboard with dynamic JSON configuration",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:main:watch\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:main": "tsc -p tsconfig.json && cp dist-main/main.js dist-main/preload.js ./",
    "dev:main:watch": "tsc -p tsconfig.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on http://localhost:5173 dist-main/main.js dist-main/preload.js && cp dist-main/main.js dist-main/preload.js ./ && NODE_ENV=development electron main.dev.js",
    "build": "npm run build:renderer && npm run build:main && electron-builder",
    "build:renderer": "tsc -p tsconfig.renderer.json && vite build",
    "build:main": "tsc -p tsconfig.json",
    "type-check": "tsc --noEmit -p tsconfig.renderer.json && tsc --noEmit -p tsconfig.json",
    "type-check:watch": "tsc --noEmit --watch -p tsconfig.renderer.json",
    "vite": "vite"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.49",
    "@monaco-editor/react": "^4.7.0",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-rnd": "^10.5.2",
    "react-syntax-highlighter": "^16.1.0",
    "vite": "^7.2.4",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.ai-dashboard2.app",
    "productName": "AI Dashboard",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "dashboard-tools.js",
      "project-utils.js",
      "scripts/*.js",
      "node_modules/**/*"
    ],
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    }
  }
}
