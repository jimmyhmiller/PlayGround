{
  "name": "electron-hot-reload-dashboard",
  "version": "1.0.0",
  "description": "Electron app with hot-reloading backend and React frontend",
  "main": "src/main/bootstrap.js",
  "scripts": {
    "build:preload": "esbuild src/main/preload.ts --bundle --platform=node --outfile=src/main/preload.js --external:electron",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "NODE_ENV=development electron -r hot-reload/electron-loader .",
    "dev:no-hot": "npm run build:preload && concurrently \"npm run dev:main:no-hot\" \"npm run dev:renderer\"",
    "dev:main:no-hot": "NODE_ENV=development electron .",
    "dev:renderer": "vite",
    "build": "vite build",
    "start": "electron ."
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "chokidar": "^5.0.0",
    "codemirror": "^6.0.2",
    "hot-reload": "file:../node-hot-reload",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/react-dom": "^19.2.3",
    "@types/react-window": "^1.8.8",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.10"
  }
}
