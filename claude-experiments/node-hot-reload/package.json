{
  "name": "hot-reload",
  "version": "0.1.0",
  "description": "ClojureScript-style hot reloading for JavaScript",
  "main": "dist/index.js",
  "bin": {
    "hot": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./api": "./dist/api.js",
    "./register": "./dist/register.js",
    "./strip": "./dist/strip.js",
    "./loader": "./dist/loader-register.mjs",
    "./electron-loader": "./dist/electron-loader.js"
  },
  "scripts": {
    "build": "tsc && cp src/*.mjs dist/ && cp src/electron-loader.js dist/",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@babel/generator": "^7.23.0",
    "@babel/parser": "^7.23.0",
    "@babel/plugin-transform-typescript": "^7.28.5",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "chokidar": "^3.5.3",
    "pirates": "^4.0.6",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.6.0",
    "@types/babel__traverse": "^7.20.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "typescript": "^5.3.0"
  }
}
