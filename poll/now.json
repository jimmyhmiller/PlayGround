{
  "version": 2,
  "name": "poll",
  "alias": "poll-app.now.sh",
  "builds": [
    { "src": "api/poll.js", "use": "@now/node" },
    { "src": "api/actions.js", "use": "@now/node" },
    { "src": "frontend/next.config.js", "use": "@now/next"},
    { "src": "frontend/static/*", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/poll", 
      "dest": "/api/poll.js" 
    },
    {
      "src": "/actions", 
      "dest": "/api/actions.js" 
    },
    {
      "src": "/", 
      "dest": "/frontend/" 
    },
    {
      "src": "/static/(.*)", 
      "dest": "/frontend/static/$1" 
    }
  ]
}